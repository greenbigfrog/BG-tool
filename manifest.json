{
    "manifest_version": 2,

    "name": "Banggood Affiliate Tool",
    "description": "This extension allows to easily share affiliate links",
    "version": "0.1",

    "icons": {
        "128": "icon_128.png",
        "32": "icon_32.png",
        "16": "icon_16.png"
    },

    "browser_action": {
        "default_icon": "icon_32.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "storage"
    ],
    "options_page": "options.html"
}
